<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.wheresmystuff.controllers.WelcomeActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/login_screen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="209dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:background="#db4d40"
            android:text="SIGN IN "
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/bt_register"
            android:layout_width="wrap_content"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bt_login"
            android:layout_alignEnd="@+id/bt_login"
            android:layout_alignStart="@+id/bt_login"
            android:layout_marginBottom="70dp"
            android:text="GET STARTED" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
